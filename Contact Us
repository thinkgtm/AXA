/* Accordion layout */
.accordion .accordion__item {
  display: contents;
}

/* Body panels */
.accordion .accordion__body {
  grid-column: 1 / -1;
  display: none;
  padding: 24px;
  border: 1px solid rgba(0,0,0,0.08);
  border-radius: 12px;
  background: #fff;
}

/* Show on open */
.accordion .accordion__item.is-open > .accordion__body,
.accordion .accordion__header[aria-expanded="true"] + .accordion__body,
.accordion .accordion__header.active + .accordion__body {
  display: block;
}

/* 2) Header tiles */
.accordion .accordion__header {
  display: flex;
  align-items: center;
  justify-content: center;
  aspect-ratio: 4 / 3;
  background-color: #fff;
  background-repeat: no-repeat;
  background-position: center;
  background-size: 60%; /* âœ… smaller logo */
  border: 1px solid rgba(0,0,0,0.1);
  border-radius: 12px;
  margin: 0 !important;
  cursor: pointer;
  transition: box-shadow .2s ease, transform .06s ease, border-color .2s ease, background-size .2s ease;
  text-indent: -9999px;
  overflow: hidden;
}

/* Hover / focus styles */
.accordion .accordion__header:hover {
  box-shadow: 0 6px 18px rgba(0,0,0,.08);
  background-size: 65%;
}
.accordion .accordion__header:active {
  transform: translateY(1px);
}
.accordion .accordion__header:focus-visible {
  outline: 3px solid #00008f;
  outline-offset: 2px;
}

/* Selected/open look */
.accordion .accordion__header[aria-expanded="true"] {
  border-color: #00008f;
  box-shadow: 0 0 0 3px color-mix(in srgb, #00008f 20%, transparent);
}

